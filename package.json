{
  "name": "aife",
  "version": "0.0.1",
  "description": "Aife: An Interactive Fiction Editor",
  "author": "Konstantin Kitmanov <doctor.hogart@gmail.com>",
  "private": true,
  "scripts": {
    "watchify": "watchify -v --poll browserify-hmr -e src/aife.js -o dist/aife.js",
    "serve": "http-server -c 1 -a localhost",
    "dev": "npm-run-all --parallel watchify serve",
    "build": "cross-env NODE_ENV=production browserify -e src/aife.js",
    "lint": "eslint --ext .js,.vue src test",
    "test": "watch \"browserify -t babelify test/unit/index.js | tape-run | faucet\""
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "dependencies": {
    "codemirror": "^5.15.2",
    "common-tags": "^0.1.1",
    "lodash": "^4.12.0",
    "vue": "^1.0.24",
    "vue-router": "^0.7.13",
    "vuex": "^0.6.3",
    "vuex-router-sync": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.9.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-runtime": "^6.9.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.1",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^1.0.5",
    "eslint": "^2.10.2",
    "eslint-config-yandex": "^1.0.6",
    "eslint-plugin-html": "^1.4.0",
    "faucet": "0.0.1",
    "http-server": "^0.9.0",
    "npm-run-all": "^2.1.0",
    "proxyquireify": "^3.0.1",
    "tape": "^4.5.1",
    "tape-run": "^2.1.3",
    "uglify-js": "^2.5.0",
    "vue-hot-reload-api": "^1.2.2",
    "vueify": "^8.0.0",
    "vueify-insert-css": "^1.0.0",
    "watch": "^0.18.0",
    "watchify": "^3.4.0"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
    "plugins": [
      "html"
    ],
    "extends": "eslint-config-yandex",
    "rules": {
      "eol-last": [
        0
      ],
      "comma-dangle": [
        "error",
        "always"
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "arrow-parens": [
        "error",
        "always"
      ],
      "constructor-super": [
        "error"
      ],
      "generator-star-spacing": [
        "error",
        {
          "before": false,
          "after": true
        }
      ],
      "no-class-assign": [
        "error"
      ],
      "no-confusing-arrow": [
        "error"
      ],
      "no-const-assign": [
        "error"
      ],
      "no-dupe-class-members": [
        "error"
      ],
      "no-duplicate-imports": [
        "error"
      ],
      "no-new-symbol": [
        "error"
      ],
      "no-this-before-super": [
        "error"
      ],
      "no-useless-constructor": [
        "error"
      ],
      "no-var": [
        "error"
      ],
      "object-shorthand": [
        "error",
        "always"
      ],
      "prefer-arrow-callback": [
        "error",
        {
          "allowNamedFunctions": true
        }
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "all"
        }
      ],
      "prefer-reflect": [
        "off"
      ],
      "prefer-rest-params": [
        "warn"
      ],
      "prefer-spread": [
        "error"
      ],
      "prefer-template": [
        "error"
      ],
      "require-yield": [
        "error"
      ],
      "template-curly-spacing": [
        "error",
        "never"
      ],
      "yield-star-spacing": [
        "error",
        "after"
      ]
    }
  }
}
