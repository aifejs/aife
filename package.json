{
  "name": "aife",
  "version": "0.0.1",
  "description": "Aife: An Interactive Fiction Editor",
  "author": "Konstantin Kitmanov <doctor.hogart@gmail.com>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/hogart/aife.git"
  },
  "bugs": {
    "url": "https://github.com/hogart/aife/issues/"
  },
  "scripts": {
    "start": "webpack-dev-server --hot",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "lint": "eslint --ext .js,.vue src",
    "test": "watch \"browserify -t babelify test/unit/index.js | tape-run | faucet\"",
    "test-once": "browserify -t babelify test/unit/index.js | tape-run | faucet"
  },
  "dependencies": {
    "browser-saveas": "^1.0.1",
    "codemirror": "^5.15.2",
    "common-tags": "^1.2.1",
    "jquery": "^3.0.0",
    "lodash": "^4.13.1",
    "normalize.css": "^4.1.1",
    "tiny-uuid": "^1.0.0",
    "vue": "^1.0.24",
    "vue-router": "^0.7.13",
    "vuex": "^0.6.3",
    "vuex-router-sync": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-runtime": "^6.11.6",
    "babelify": "^7.2.0",
    "browserify": "^13.0.1",
    "cross-env": "^1.0.8",
    "css-loader": "^0.23.1",
    "eslint": "^3.3.1",
    "eslint-config-yandex": "^1.0.6",
    "eslint-plugin-html": "^1.5.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "faucet": "0.0.1",
    "file-loader": "^0.9.0",
    "http-server": "^0.9.0",
    "json-loader": "^0.5.4",
    "proxyquireify": "^3.0.1",
    "pug": "^2.0.0-beta5",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.3.1",
    "tape": "^4.5.1",
    "tape-run": "^2.1.4",
    "uglify-js": "^2.5.0",
    "url-loader": "^0.5.7",
    "vue-hot-reload-api": "^1.3.3",
    "vue-html-loader": "^1.2.3",
    "vue-loader": "^8.5.3",
    "vue-style-loader": "^1.0.0",
    "vueify-insert-css": "^1.0.0",
    "watch": "^0.18.0",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.14.1"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
    "plugins": [
      "html"
    ],
    "extends": "eslint-config-yandex",
    "rules": {
      "eol-last": [
        0
      ],
      "comma-dangle": [
        "error",
        "always"
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "arrow-parens": [
        "error",
        "always"
      ],
      "constructor-super": [
        "error"
      ],
      "generator-star-spacing": [
        "error",
        {
          "before": false,
          "after": true
        }
      ],
      "no-class-assign": [
        "error"
      ],
      "no-confusing-arrow": [
        "error"
      ],
      "no-const-assign": [
        "error"
      ],
      "no-dupe-class-members": [
        "error"
      ],
      "no-duplicate-imports": [
        "error"
      ],
      "no-new-symbol": [
        "error"
      ],
      "no-this-before-super": [
        "error"
      ],
      "no-useless-constructor": [
        "error"
      ],
      "no-var": [
        "error"
      ],
      "object-shorthand": [
        "error",
        "always"
      ],
      "prefer-arrow-callback": [
        "error",
        {
          "allowNamedFunctions": true
        }
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "all"
        }
      ],
      "prefer-reflect": [
        "off"
      ],
      "prefer-rest-params": [
        "warn"
      ],
      "prefer-spread": [
        "error"
      ],
      "prefer-template": [
        "error"
      ],
      "require-yield": [
        "error"
      ],
      "template-curly-spacing": [
        "error",
        "never"
      ],
      "yield-star-spacing": [
        "error",
        "after"
      ]
    }
  }
}
