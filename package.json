{
  "name": "aife",
  "version": "0.0.1",
  "description": "Aife: An Interactive Fiction Editor",
  "author": "Konstantin Kitmanov <doctor.hogart@gmail.com>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/hogart/aife.git"
  },
  "bugs": {
    "url": "https://github.com/hogart/aife/issues/"
  },
  "scripts": {
    "start": "webpack-dev-server --hot --open",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "lint": "eslint --ext .js,.vue --ignore-path .eslintignore .",
    "test": "tape-watch -1 -r babel-register test/**/*.test.js",
    "ci": "npm run lint && npm run test"
  },
  "dependencies": {
    "browser-saveas": "^1.0.1",
    "codemirror": "^5.23.0",
    "common-tags": "^1.4.0",
    "fetch-jsonp": "^1.0.6",
    "jshint": "^2.9.3",
    "lodash": "^4.17.4",
    "normalize.css": "^5.0.0",
    "sugarcube-mode": "github:aifejs/sugarcube2-mode",
    "tiny-uuid": "^1.0.0",
    "vue": "^2.2.4",
    "vue-router": "^2.3.0",
    "vuex": "^2.2.1",
    "vuex-router-sync": "^4.1.2"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-register": "^6.24.0",
    "babel-runtime": "^6.23.0",
    "cross-env": "^3.2.4",
    "css-loader": "^0.27.3",
    "eslint": "^3.18.0",
    "eslint-config-aifejs": "github:aifejs/eslint-config-aifejs",
    "eslint-friendly-formatter": "^2.0.7",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-html": "^2.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "json-loader": "^0.5.4",
    "pug": "^2.0.0-beta11",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "tape": "^4.6.3",
    "tape-watch": "^2.3.0",
    "uglify-js": "^2.7.5",
    "url-loader": "^0.5.7",
    "vue-hot-reload-api": "^2.0.11",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^11.1.4",
    "vue-style-loader": "^2.0.4",
    "vue-template-compiler": "^2.2.4",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.2"
  },
  "types": "./types/index.d.ts",
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
    "plugins": [
      "html"
    ],
    "extends": "eslint-config-aifejs"
  }
}
