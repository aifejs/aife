.sorterButtons
    &-title
        margin-right: 1ex

    &-sort
        display: inline-block
        margin-left: 1ex

    &-grp
        display: inline-block

    &-btn
        width: 8em
        line-height: 2em
        display: inline-block
        border: 0 none
        background: lightgrey

        &:first-child
            border-radius: 4px 0 0 4px
        &:last-child
            border-radius: 0 4px 4px 0

        &.active
            background-color: silver