.codeEditor
    display: flex
    flex-direction: column
    align-items: stretch
    flex-grow: 1

    label
        display: block
        width: 100%
        margin-bottom: 1ex

        > input
            display: block
            width: 100%

        &.codeArea
            display: flex
            flex-direction column
            flex-grow: 1
            margin-bottom: 0

            textarea
                flex-grow: 1
                resize: vertical